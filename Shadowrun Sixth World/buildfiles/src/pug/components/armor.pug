- var base='armor'

.component(class=base)
  h3(data-i18n='armor-u') Armor
  ul(class=base+'-header')
    +repeating-li(base, 'Armor', 'name', 'armor')
    +repeating-li(base, 'Rating', 'rating')
    +repeating-li(base, 'Notes', 'notes')
  fieldset(class='repeating_'+base)
    +add-repeating-inputs('armor', ['name', 'rating', 'notes'])
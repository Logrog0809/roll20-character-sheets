- var attrs = require('@/data/attributenames.json')
include ../mixins.pug

.knowledge
  .card
    .card-header
      h3(data-i18n=i18nize('knowledge')) Knowledge
    .card-body
      .flex-table
        .flex-table-header
          .col-12(data-i18n=i18nize('topic')) Topic
        .is-flex
          fieldset(class='repeating_knowledge')
            .row.is-vcentered
              .col-12
                input.input(name=attr(attrs.knowledge.topic) type='text' value='')
include ../mixins.pug
- var attrs = require('@/data/attributenames.json')
- var skills = require('@/data/skills.json')
- var weaponskills = Object.values(skills).filter(x => x.weapons);

.ranged-weapons-overview
  .card
    .card-header
      h3(data-i18n=i18nize('ranged weapons')) Ranged Weapons
    .card-body
      .flex-table
        .flex-table-header
          .col-4(data-i18n=i18nize('weapon')) Weapon
          .col-1
            +popover('DV', 'Damage Value')
          .col-4(data-i18n=i18nize('attack ratings')) Attack Ratings
          .col-1(data-i18n=i18nize('carried')) Carried
          .col-1(data-i18n=i18nize('wifi')) WiFi
          .col-1(data-i18n=i18nize('edit')) Edit
        .is-flex
          fieldset(class='repeating_rangedweapons')
            input.is-hidden(type='checkbox' readonly name=attr(attrs.rangedweapons.carried) value='1')
            .row.is-vcentered
              .col-4
                span(name=attr(attrs.rangedweapons.name)) Name
              .col-1
                span(name=attr(attrs.rangedweapons.dv)) DV
              .col-4
                span(name=attr(attrs.rangedweapons.close)) Close
                | /
                span(name=attr(attrs.rangedweapons.near)) Near
                | /
                span(name=attr(attrs.rangedweapons.medium)) Medium
                | /
                span(name=attr(attrs.rangedweapons.far)) Far
                | /
                span(name=attr(attrs.rangedweapons.extreme)) Extreme
              .col-1
                .checkbox
                  label
                    input(name=attr(attrs.rangedweapons.carried) type='checkbox' value='1')
                    span
              .col-1
                .checkbox
                  label
                    input(name=attr(attrs.rangedweapons.wifi) type='checkbox' value='1')
                    span
              .col-1
                .checkbox
                  label
                    input(name=attr(attrs.rangedweapons.edit) type='checkbox' value='1')
                    span
            .row.is-vcentered.light-bg.edit-form
              .col-12
                  span(data-i18n=i18nize('Editing')) Editing: 
                  span(name=attr(attrs.rangedweapons.name))
              .col-2 Weapon Info
              .col-3
                span(data-i18n=i18nize('Name')) Name
                input.input(name=attr(attrs.rangedweapons.name) type='text' value='')
              .col-1
                +popover('DV', 'Damage Value')
                input.input(name=attr(attrs.rangedweapons.dv) type='text' value='')
              .col-2
                span(data-i18n=i18nize('Firing Modes')) Firing Modes
                input.input(name=attr(attrs.rangedweapons.modes) type='text' value='')
              .col-1
                span(data-i18n=i18nize('Ammo')) Ammo
                input.input(name=attr(attrs.rangedweapons.ammo) type='text' value='')
              .col-2
                span(data-i18n=i18nize('Skill')) Skill
                select.input(name=attr(attrs.rangedweapons.skill))
                  option(value='' data-i18n=i18nize('none')) None
                  each skill in weaponskills
                    option(value=skill.name data-i18n=i18nize(skill.name))= skill.display
            .row.is-vcentered.light-bg.edit-form
              .col-2
                span(data-i18n=i18nize('Attack Ratings')) Attack Ratings
              .col-2
                span(data-i18n=i18nize('Close')) Close
                input.input(name=attr(attrs.rangedweapons.close) type='number' value='0')
              .col-2
                span(data-i18n=i18nize('Near')) Near
                input.input(name=attr(attrs.rangedweapons.near) type='number' value='0')
              .col-2
                span(data-i18n=i18nize('Medium')) Medium
                input.input(name=attr(attrs.rangedweapons.medium) type='number' value='0')
              .col-2
                span(data-i18n=i18nize('Far')) Far
                input.input(name=attr(attrs.rangedweapons.far) type='number' value='0')
              .col-2
                span(data-i18n=i18nize('Extreme')) Extreme
                input.input(name=attr(attrs.rangedweapons.extreme) type='number' value='0')
- var attrs = require('@/data/attributenames.json')
include ../mixins.pug

.rituals
  .card
    .card-header
      h3(data-i18n=i18nize('rituals')) Rituals
    .card-body
      .flex-table
        .flex-table-header
          .col-2(data-i18n=i18nize('name')) Name
          .col-1(data-i18n=i18nize('threshold')) Threshold
          .col-1(data-i18n=i18nize('Anchored')) Anchored
          .col-2(data-i18n=i18nize('Material Link')) Material Link
          .col-1(data-i18n=i18nize('minion')) Minion
          .col-1(data-i18n=i18nize('spotter')) Spotter
          .col-4(data-i18n=i18nize('Notes')) Notes
        .is-flex
          fieldset(class='repeating_spells')
            .row.is-vcentered
              .col-2
                input.input(name=attr(attrs.rituals.name) type='text' value='')
              .col-1
                input.input(name=attr(attrs.rituals.threshold) type='number' value='0')
              .col-1
                .checkbox
                  label
                    input(name=attr(attrs.rituals.anchored) type='checkbox' value='1')
                    span
              .col-2
                .checkbox
                  label
                    input(name=attr(attrs.rituals.materiallink) type='checkbox' value='1')
                    span
              .col-1
                .checkbox
                  label
                    input(name=attr(attrs.rituals.minion) type='checkbox' value='1')
                    span
              .col-1
                .checkbox
                  label
                    input(name=attr(attrs.rituals.spotter) type='checkbox' value='1')
                    span
              .col-4
                input.input(name=attr(attrs.rituals.notes) type='text' value='')
              


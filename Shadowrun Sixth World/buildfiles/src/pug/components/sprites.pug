include ../mixins.pug
- var attrs = require('@/data/attributenames.json')
- var sprites = require('@/data/sprites.json')

.sprites
  .card
    .card-header
      h3(data-i18n=i18nize('sprites')) Sprites
    .card-body
      .flex-table
        .flex-table-header
          .col-3(data-i18n=i18nize('name')) Name
          .col-2(data-i18n=i18nize('type')) Type
          .col-2(data-i18n=i18nize('Rating')) Rating
          .col-2(data-i18n=i18nize('Tasks')) Tasks
          .col-2(data-i18n=i18nize('Registered')) Registered
        .is-flex
          fieldset(class='repeating_sprites')
            .row.is-vcentered
              .col-3
                input.input(name=attr(attrs.sprites.name) type='text' value='')
              .col-2
                select.input(name=attr(attrs.sprites.type) value='')
                  each sprite in sprites
                    option(data-i18n=i18nize(sprite.display) value=sprite.name)= sprite.display
              .col-2
                input.input(name=attr(attrs.sprites.rating) type='number' value='0')
              .col-2
                input.input(name=attr(attrs.sprites.tasks) type='number' value='0')
              .col-1
                .checkbox
                  label
                    input(name=attr(attrs.sprites.registered) type='checkbox' value='1')
                    span